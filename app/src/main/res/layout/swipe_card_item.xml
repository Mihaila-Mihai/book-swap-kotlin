<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fade_black"
        app:layout_constraintStart_toStartOf="@id/thumbnail_image_swipe_view"
        app:layout_constraintEnd_toEndOf="@id/thumbnail_image_swipe_view"
        app:layout_constraintBottom_toTopOf="@id/thumbnail_image_swipe_view">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/username_swipe_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxWidth="300dp"
            android:text="Mihaila Mihai"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/user_image_like"
            app:layout_constraintStart_toEndOf="@id/user_image_like"
            app:layout_constraintTop_toTopOf="@id/user_image_like" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/thumbnail_image_swipe_view"
        android:layout_width="250dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fade_black"
        app:layout_constraintStart_toStartOf="@id/thumbnail_image_swipe_view"
        app:layout_constraintEnd_toEndOf="@id/thumbnail_image_swipe_view"
        app:layout_constraintTop_toBottomOf="@id/thumbnail_image_swipe_view">

        <TextView
            android:id="@+id/book_title_swap_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:maxWidth="300dp"
            android:text="Book Title"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/book_authors_swap_view"/>


        <TextView
            android:id="@+id/book_authors_swap_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Authors"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/book_title_swap_view"
            app:layout_constraintTop_toBottomOf="@id/book_title_swap_view"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>










</androidx.constraintlayout.widget.ConstraintLayout>